{
  "name": "vrooli",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "author": "Vrooli Development Team",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "setup": "bash scripts/main/setup.sh",
    "develop": "bash scripts/main/develop.sh",
    "build": "bash scripts/main/build.sh",
    "deploy": "bash scripts/main/deploy.sh",
    "lint:js": "eslint . --ext .ts,.tsx",
    "lint:shell": "shellcheck -x scripts/**/*.sh",
    "lint": "run-s lint:js lint:shell",
    "test:shell": "bash scripts/__tests/__runTests.sh",
    "test:unit": "pnpm -r test",
    "test:run": "pnpm -r test:run",
    "test": "run-s test:shell test:unit pnpm -r test"
  },
  "devDependencies": {
    "@swc/cli": "^0.1.60",
    "@swc/core": "^1.3.57",
    "@types/chai": "^4.3.0",
    "@types/dotenv": "^8.2.0",
    "@types/electron": "^1.6.12",
    "@types/express": "^4.17.21",
    "@types/mocha": "^10.0.0",
    "@types/node": "^18.16.18",
    "@typescript-eslint/eslint-plugin": "^5.58.0",
    "@typescript-eslint/parser": "^5.58.0",
    "bats": "^1.11.0",
    "chai": "^5.0.0",
    "concurrently": "^8.0.1",
    "dotenv-cli": "^7.2.0",
    "electron": "^35.2.1",
    "electron-builder": "^26.0.12",
    "eslint": "^8.41.0",
    "eslint-plugin-react": "^7.37.5",
    "mocha": "^10.2.0",
    "npm-run-all": "^4.1.5",
    "rimraf": "^5.0.0",
    "sinon": "^15.0.0",
    "ts-node": "^10.9.1",
    "ts-node-dev": "^2.0.0",
    "tsx": "^4.19.3",
    "typescript": "5.4.5"
  },
  "packageManager": "pnpm@10.9.0+sha512.0486e394640d3c1fb3c9d43d49cf92879ff74f8516959c235308f5a8f62e2e19528a65cdc2a3058f587cde71eba3d5b56327c8c33a97e4c4051ca48a10ca2d5f",
  "build": {
    "appId": "com.vrooli.app",
    "productName": "Vrooli",
    "directories": {
      "output": "dist/desktop",
      "buildResources": "platforms/desktop/assets"
    },
    "files": [
      "dist/desktop/main.cjs",
      "dist/desktop/preload.cjs",
      "platforms/desktop/src/splash.html",
      "packages/server/dist",
      "!packages/server/dist/**/*.map",
      {
        "from": "packages/server/package.json",
        "to": "packages/server/package.json"
      }
    ],
    "asarUnpack": [
      "**/node_modules/*.node"
    ],
    "extraMetadata": {
      "main": "dist/desktop/main.cjs"
    },
    "win": {
      "target": "nsis",
      "icon": "icon.ico",
      "signAndEditExecutable": false
    },
    "nsis": {
      "installerIcon": "icon.ico",
      "uninstallerIcon": "icon.ico",
      "uninstallDisplayName": "Vrooli",
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "menuCategory": true
    },
    "mac": {
      "target": "dmg",
      "icon": "icon.icns"
    },
    "linux": {
      "target": "AppImage",
      "icon": "icon.png"
    }
  }
}
