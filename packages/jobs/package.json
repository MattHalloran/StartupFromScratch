{
  "name": "@vrooli/jobs",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "main": "dist/index.js",
  "scripts": {
    "clean": "rimraf dist",
    "build:server": "pnpm --filter @vrooli/server run build",
    "build:compile": "swc src -d dist --source-maps --ignore \"**/*.test.*\"",
    "build": "cross-env NODE_ENV=production run-s build:server build:compile",
    "test:compile": "swc src -d dist --source-maps",
    "test:build": "cross-env NODE_ENV=test run-s clean test:compile",
    "test:run": "dotenv -e ../../.env-test -- mocha --file dist/__test/setup.js dist/**/*.test.js",
    "test:watch": "dotenv -e ../../.env-test -- mocha --watch --file dist/__test/setup.js dist/**/*.test.js",
    "test": "run-s test:build test:run",
    "test-watch": "run-s test:build test:watch",
    "lint": "eslint src",
    "lint:fix": "eslint src --fix",
    "type-check": "cross-env NODE_OPTIONS=--max-old-space-size=6144 tsc --noEmit",
    "start:dev": "cross-env NODE_OPTIONS=--max-old-space-size=4096 nodemon dist/index.js",
    "start:prod": "node --experimental-modules --experimental-specifier-resolution=node dist/index.js"
  },
  "dependencies": {
    "@vrooli/server": "workspace:*",
    "@vrooli/shared": "workspace:*"
  },
  "devDependencies": {
    "@swc/cli": "^0.1.63",
    "@swc/core": "^1.3.104",
    "cross-env": "^7.0.3",
    "dotenv-cli": "^8.0.0",
    "npm-run-all": "^4.1.5",
    "rimraf": "^5.0.10",
    "typescript": "5.4.5"
  },
  "engines": {
    "node": ">=17.0.0"
  }
}
