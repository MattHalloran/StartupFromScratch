{
  "name": "@vrooli/server",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "clean": "rimraf dist",
    "copy": "cpy \"src/**/*.{txt,lua,html,prisma,sql}\" \"src/auth/message_signing/rust/pkg/*.{wasm,json,cjs}\" --cwd=. --dest=dist",
    "build:shared": "pnpm --filter @vrooli/shared run build",
    "build:compile": "swc src -d dist --source-maps --ignore \"**/*.test.*\"",
    "build": "cross-env NODE_ENV=production run-s build:shared build:compile copy",
    "test:compile": "swc src -d dist --source-maps",
    "test:build": "cross-env NODE_ENV=test run-s clean test:compile copy",
    "test:run": "dotenv -e ../../.env-test -- mocha --file dist/__test/setup.js dist/**/*.test.js",
    "test:watch": "dotenv -e ../../.env-test -- mocha --watch --file dist/__test/setup.js dist/**/*.test.js",
    "test": "run-s test:build test:run",
    "test-watch": "run-s test:build test:watch",
    "lint": "eslint src",
    "lint:fix": "eslint src --fix",
    "type-check": "cross-env NODE_OPTIONS=--max-old-space-size=6144 tsc --noEmit",
    "start:dev": "cross-env NODE_OPTIONS=--max-old-space-size=4096 nodemon dist/index.js",
    "start:prod": "node --experimental-modules --experimental-specifier-resolution=node dist/index.js",
    "prisma:migrate": "prisma migrate deploy",
    "prisma:generate": "prisma generate",
    "preprod": "run-s prisma:migrate prisma:generate",
    "develop": "run-s preprod start:dev"
  },
  "dependencies": {
    "@prisma/client": "6.1.0",
    "@vrooli/prisma": "workspace:*",
    "@vrooli/redis": "workspace:*",
    "@vrooli/shared": "workspace:*",
    "cors": "^2.8.5",
    "dotenv": "^16.0.3",
    "express": "^5.0.1",
    "prisma": "6.1.0"
  },
  "devDependencies": {
    "@swc/cli": "^0.1.63",
    "@swc/core": "^1.3.104",
    "@types/chai": "^5.0.1",
    "@types/express": "^4.17.11",
    "@types/mocha": "^10.0.10",
    "@types/node": "^17.0.35",
    "@types/supertest": "^2.0.12",
    "chai": "^5.1.2",
    "concurrently": "^8.0.1",
    "cpy-cli": "^5.0.0",
    "cross-env": "^7.0.3",
    "dotenv-cli": "^8.0.0",
    "mocha": "^10.2.0",
    "npm-run-all": "^4.1.5",
    "rimraf": "^5.0.10",
    "supertest": "^6.3.3",
    "typescript": "5.4.5"
  },
  "engines": {
    "node": ">=17.0.0"
  }
}
