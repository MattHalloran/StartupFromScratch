{
    "name": "@vrooli/server",
    "version": "0.1.0",
    "private": true,
    "type": "module",
    "main": "dist/index.js",
    "types": "dist/index.d.ts",
    "scripts": {
        "clean": "rimraf dist",
        "copy": "cpy \"src/**/*.{txt,lua,html,prisma,sql}\" \"src/auth/message_signing/rust/pkg/*.{wasm,json,cjs}\" dist",
        "build:shared": "pnpm --dir ../shared run build",
        "build:compile": "swc src -d dist --source-maps --ignore \"**/*.test.*\"",
        "build": "cross-env NODE_ENV=production run-s clean build:compile copy",
        "test:compile": "swc src -d dist --source-maps",
        "test:build": "cross-env NODE_ENV=test run-s clean test:compile copy",
        "test:run": "dotenv -e ../../.env-test -- mocha --file dist/__test/setup.js dist/**/*.test.js",
        "test:watch": "dotenv -e ../../.env-test -- mocha --watch --file dist/__test/setup.js dist/**/*.test.js",
        "test": "run-s build:shared test:build test:run",
        "test-watch": "run-s build:shared test:build test:watch",
        "lint": "eslint src",
        "lint:fix": "eslint src --fix",
        "type-check": "cross-env NODE_OPTIONS=--max-old-space-size=6144 tsc --noEmit",
        "start:development": "cross-env NODE_OPTIONS=--max-old-space-size=4096 nodemon dist/index.js",
        "start:production": "node --experimental-modules --experimental-specifier-resolution=node dist/index.js",
        "prisma:migrate": "prisma migrate deploy --schema=src/db/schema.prisma",
        "prisma:generate": "prisma generate --schema=src/db/schema.prisma"
    },
    "dependencies": {
        "@prisma/client": "6.1.0",
        "@vrooli/shared": "workspace:*",
        "cookie": "^0.7.2",
        "cors": "^2.8.5",
        "express": "^5.0.1",
        "prisma": "6.1.0",
        "winston": "^3.17.0"
    },
    "devDependencies": {
        "@swc/cli": "^0.1.63",
        "@swc/core": "^1.3.104",
        "@types/chai": "^5.0.1",
        "@types/express": "^4.17.11",
        "@types/mocha": "^10.0.10",
        "@types/node": "^17.0.35",
        "@types/sinon": "^17.0.3",
        "@types/supertest": "^2.0.12",
        "chai": "^5.1.2",
        "concurrently": "^8.0.1",
        "cpy-cli": "^5.0.0",
        "cross-env": "^7.0.3",
        "dotenv-cli": "^8.0.0",
        "mocha": "^11.1.0",
        "nodemon": "^3.1.0",
        "npm-run-all": "^4.1.5",
        "rimraf": "^5.0.10",
        "sinon": "^19.0.2",
        "supertest": "^6.3.3",
        "testcontainers": "^10.18.0",
        "typescript": "5.4.5",
        "typescript-json-schema": "^0.65.1",
        "why-is-node-running": "^2.3.0"
    },
    "engines": {
        "node": ">=17.0.0"
    }
}