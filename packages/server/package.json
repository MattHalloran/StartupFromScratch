{
  "name": "@startupfromscratch/server",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "dev": "ts-node-dev --respawn --transpile-only src/index.ts",
    "build": "tsc -b",
    "start": "node dist/index.js",
    "test": "NODE_ENV=test mocha --require ts-node/register --file src/__test/setup.ts \"src/__test/**/*.ts\"",
    "test-watch": "NODE_ENV=test mocha --watch --require ts-node/register --file src/__test/setup.ts \"src/__test/**/*.ts\""
  },
  "dependencies": {
    "@startupfromscratch/prisma-db": "workspace:*",
    "@startupfromscratch/redis-db": "workspace:*",
    "@startupfromscratch/shared": "workspace:*",
    "dotenv": "^16.0.3",
    "express": "^4.18.2"
  },
  "devDependencies": {
    "@types/chai": "^4.3.0",
    "@types/mocha": "^10.0.0",
    "@types/supertest": "^2.0.12",
    "chai": "^5.0.0",
    "mocha": "^10.2.0",
    "supertest": "^6.3.3",
    "ts-node": "^10.9.1",
    "ts-node-dev": "^2.0.0",
    "typescript": "5.4.5"
  }
}
