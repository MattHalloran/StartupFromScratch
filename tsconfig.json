{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "node",
    "jsx": "react-jsx",
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "outDir": "dist",
    "lib": ["ES2020", "DOM"],
    "types": ["node"]
  },
  "include": [
    "packages/**/*.ts",
    "packages/**/*.tsx",
    "scripts/**/*.ts",
    "types/**/*.d.ts"
  ],
  "exclude": [
    "node_modules", 
    "dist", 
    "**/*.test.ts", 
    "**/*.test.tsx", 
    "**/__test__/**"
  ]
} 